.podcast-play
  background-color #eee
  height 70px
  
  h1,h2,h3,h4,h5,h6,p
    margin 0
  
  .progress-bar
    background-color #ddd
    border-radius 20px 20px 20px 20px  
    overflow hidden  
    position absolute  
    left 65px
    top 31px
    width 800px 
    height 10px 
    -webkit-box-shadow 0 1px 1px 0 rgba(0,0,0,0.2) inset  
    box-shadow 0 1px 1px 0 rgba(0,0,0,0.2) inset 
    
