05 QUESTIONS ---------------------------------------------------------------
* * */

.about-qna
  padding 60px 0 0

.guests
  h2
    margin 20px 0 70px
  
  .guest
    margin-bottom 30px
    text-align center
    p
      transition color .2s
      font-weight 700
      margin 15px 0 0
    img
      width 70%
      transition opacity .2s
    
    &:hover
      text-decoration none
        

.episode-archive
  margin 70px 0 40px
  
  a:hover
    text-decoration none
  
  .episode
    padding 30px 15px
    background-color #f2f2f2
    margin-bottom 40px
    transition background .2s
    cursor pointer
    border-radius 5px
    position relative
    
    &:first-child
      margin-top 40px
    
    &:hover
      background-color #eaebf3
      transition background .2s, color .2s
      
      span.episode-title
        color lighten(#1d1f2d, 50%)
        transition color .2s
      
      span.transcript
        background-color darken(#eaebf3, 10%)
    
    span.upcoming-episode, span.transcript
      display none
      position absolute
      padding 12px 16px
      font-size 16px
      transition background .2s
      top 0
      right 0
      border-top-right-radius 5px
      border-bottom-left-radius 5px
      
      /* Small devices (tablets, 768px and up) */
      @media screen and (min-width: 768px)
        display block
    
    span.transcript
      background-color darken(#f2f2f2, 8%)
      color #555

    &.upcoming    
      span.episode-title
        display inline
        color lighten(#1d1f2d, 50%)
        
      span.upcoming-episode
        background-color darken(#42446c, 5%)
        color white

    span.episode-month, span.episode-description
      margin-top 0
  
    span.episode-title
      color lighten(#1d1f2d, 50%)
      margin 0 0 3px 0
      display block
      font-size 15px
      
    span.episode-month
      font-size 30px
      margin 5px 0 7px 0
      display block
      color #3a3b47

    span.episode-description
      line-height 1.75
      font-family roboto
      font-size 16px
      color #555
    
    .video-thumbnail
      width 100%
      border-radius 5px
      margin 0 0 20px 0
      
      /* Small devices (tablets, 768px and up) */
      @media screen and (min-width: 768px) 
        margin 0


