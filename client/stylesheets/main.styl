@import url("http://fonts.googleapis.com/css?family=Roboto:400,300,700,700italic,400italic,300italic")

roboto = "Roboto", sans-serif;

*
  margin 0
  padding 0

html 
    position relative
    min-height 100%

body 
  margin 0 0 55px /* bottom = footer height */
  -webkit-font-smoothing antialiased
  text-rendering optimizeLegibility

footer, .push
  height 2em

img
  max-width 100%
  
/* * *
00 BASIC TYPOGRAPHY  -------------------------------------------------------
* * */

a
  color #547ed3
  
.btn
  font-family roboto
  font-size 20px
  padding 11px 20px
  font-weight 700
  letter-spacing 1px

  // default purple button
  &.btn-primary
    background-color darken(#a685bd, 5%)
    border 0
    margin-top 3px

    &:hover
      background-color darken(#a685bd, 15%) 
      -webkit-transition background .1s ease-in-out
      transition background .1s ease-in-out

h1,
h2,
h3,
h4,
h5,
h6
  font-family roboto

  &.clean
    margin 0 !important

h1
  color #333
  line-height 1.3
  font-size 32px
  font-weight 700

p
  line-height 1.75
  font-family roboto
  font-size 16px
  color #555
  margin-top 20px

  &.clean
    margin 0

ul
  line-height 1.75
  font-family roboto
  font-size 16px
  color #555
  margin 20px 0 0 40px

  li
    margin 10px 0
  
/* * *
01 HEADER & FOOTER ---------------------------------------------------------
* * */

.navbar
  background-color #fff
  font-family roboto
  text-transform lowercase
  font-weight 700
  border-radius 0
  -moz-border-radius 0
  -webkit-border-radius 0
  border none
  margin-bottom 0

.navbar, .navbar-default
  min-height 80px
  
  .navbar-toggle
    margin-top 22px
    margin-bottom 25px

  li a
    color #bbb
    margin 0 !important
    padding 8px 20px
    -webkit-border-radius 20px
    -moz-border-radius 20px
    border-radius 20px
    margin 14px 15px 0 !important
    font-size 14px

    &:hover
      // important to override bootstrap styles
      background-color #f2f2f2 !important
      -webkit-transition background .1s, color .1s ease-in-out
      transition background .1s, color .1s ease-in-out
      color #111

.navbar-brand img
  height 41px

footer
  position absolute
  left 0
  bottom 0
  width 100%
  background-color #f2f2f2
  height 55px
  bottom 0
  
  p
    font-size 13px
    margin-bottom 10px
    
/* * *
01 HOME --------------------------------------------------------------------
* * */

.email-capture
  margin 0 0 20px 0
  height 500px
  background-image url('../images/bg-test3.jpg')
  background-size cover
  background-position 0 50%
  padding 30px 0

  /* Small devices (tablets, 768px and up) */
  @media screen and (min-width 768px)
    height 500px
    padding 45px 0

  /* Medium devices (desktops, 992px and up) */
  @media screen and (min-width 992px)
