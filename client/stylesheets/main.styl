            margin 3px 0 0 5px
        
        &:hover
          opacity .6
          transition opacity .2s ease-in-out 
      
    
.resources
  margin 30px auto 120px

  .title
    margin-bottom 30px !important
    h1
      text-transform lowercase
  
  i
    font-size 48px
    position relative
    top 4px
    opacity .3
    color #232438

  h3
    margin-top 0

  .row
    margin-bottom 0

    /* Medium devices (desktops, 992px and up) */
    @media screen and (min-width 992px)
      margin-bottom 50px
  

    &:last-child
      margin-bottom 0
  
  a.resource
    -webkit-border-radius 10px
    -moz-border-radius 10px
    border-radius 10px
    display block
    padding 20px 10px
    &:hover
