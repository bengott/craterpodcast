@import url("http://fonts.googleapis.com/css?family=Roboto:400,300,700,700italic,400italic,300italic")

roboto = "Roboto", sans-serif;

*
  margin 0
  padding 0

html 
    position relative
    min-height 100%

body 
  margin 0 0 55px /* bottom = footer height */
  -webkit-font-smoothing antialiased
  text-rendering optimizeLegibility

footer, .push
  height 2em

img
  max-width 100%
  
/* * *
00 BASIC TYPOGRAPHY  -------------------------------------------------------
* * */

a
  color #547ed3
  
.btn
  font-family roboto
  font-size 14px
  padding 11px 20px
  font-weight 500
  text-transform uppercase
  letter-spacing 1px
  -webkit-transition background .2s, color .2s ease-in-out
  transition background .2s, color .2s ease-in-out
  
  &.push-down
    margin-top 20px !important

  // default purple button
  &.btn-primary
    background-color darken(#a685bd, 55%)
    border 0

    &:hover
      background-color darken(#a685bd, 40%) 
      -webkit-transition background .2s, color .2s ease-in-out
      transition background .2s, color .2s ease-in-out

h1,
h2,
h3,
h4,
h5,
h6
  font-family roboto

  &.clean
    margin 0 !important

h1
  color #333
  line-height 1.3
  font-size 32px
  font-weight 700

p
  line-height 1.75
  font-family roboto
  font-size 16px
  color #555
  margin-top 20px

  &.clean
    margin 0

ul
  line-height 1.75
  font-family roboto
  font-size 16px
  color #555
  margin 20px 0 0 40px

  li
    margin 10px 0
  
/* * *
01 HEADER & FOOTER ---------------------------------------------------------
* * */

.navbar
  background-color #fff
  opacity .4
  font-family roboto
  text-transform lowercase
  font-weight 700
  border-radius 0
  -moz-border-radius 0
  -webkit-border-radius 0
  border none
  margin-bottom 0

.navbar, .navbar-default
  min-height 80px
  
  .navbar-toggle
    margin-top 22px
    margin-bottom 25px

  li a
    color #bbb
    margin 0 !important
    padding 8px 20px
    -webkit-border-radius 20px
    -moz-border-radius 20px
    border-radius 20px
    margin 14px 15px 0 !important
    font-size 14px

    &:hover
      // important to override bootstrap styles
      background-color #f2f2f2 !important
      -webkit-transition background .1s, color .1s ease-in-out
      transition background .1s, color .1s ease-in-out
      color #111
    
.footer-signup
    border-top 3px solid #404286
    position fixed
    bottom 0
    width 100%
    background #fff
    z-index 1000
    
    .navbar-form
      margin 25px 0
    
  &.footerbutton
    position  absolute
    background #404286
    border-top-right-radius 3px
    border-top-left-radius 3px
    top  -42px
    right 3%
    font-size 18px
    font-family roboto
    color white
    padding 9px 15px 7px
    border  none
    cursor  pointer
  
  &.slide-content
    width 100%
    height 0px
    background-image url('/images/bg9.jpg')
    background-position 80% 50%
    background-repeat no-repeat
    background-size cover
    border none
    font-family roboto
    
    input[type=name], input[type=email]
      height 50px
      margin 3px 10px 0 0
      font-size 16px
      border none
      width 100%
    
    p
      color #fff
      margin-top 35px
      line-height 1.6
      font-size 18px
    
    button
      width 100%
      font-weight 500
      background #404286 !important
    
    .form-inline
      margin-top 35px
    
    /* Small devices (tablets, 768px and up) */
    @media screen and (min-width: 768px) 
      input[type=name], input[type=email]
        height 40px
        margin 3px 5px 0 0
        font-size 14px
        border none
      input[type=name]
        width 120px
      input[type=email]
        width 220px 
      button
        width 110px
        height 40px
        font-size 14px
      p
        color #fff
        line-height 1.3
        font-size 14px
    
    /* Medium devices (desktops, 992px and up) */
    @media screen and (min-width: 992px)
      input[type=name], input[type=email]
        height 50px
        margin 3px 10px 0 0
        font-size 18px
        border none
      input[type=name]
        width 170px
      input[type=email]
        width 260px 
      button
        width 150px
        height 50px
        font-size 18px
      p
        line-height 1.6
        font-size 16px

    /* Large devices (large desktops, 1200px and up) */
    @media screen and (min-width: 1200px)
      input[type=name]
        width 210px
      input[type=email]
        width 350px 
      button
        width 150px
      p
        line-height 1.6
        font-size 18px

