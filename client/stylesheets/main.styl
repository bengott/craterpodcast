    position absolute
    right 10px  
    top 31px  
    width 45px  
    height 8px  
    border-radius 20px 20px 20px 20px  
    -webkit-box-shadow 0 1px 1px 0 rgba(0,0,0,0.1) inset  
    box-shadow 0 1px 1px 0 rgba(0,0,0,0.1) inset  
    background-color #992E18  
    overflow hidden
  
  span.play
    font-size 28px
    position relative
    top 15px
    left 0 !important
    margin 0 !important
    padding 0
    display inline
    color #555
  
  span.option
    font-size 15px
    text-transform uppercase
    display inline
    margin 0
    padding 24.5px 20px
    transition background .2s, color .2s ease-in-out
    
    &:first-child
