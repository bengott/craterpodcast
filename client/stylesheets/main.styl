    height 500px 
    padding 80px 0

  h1
    font-size 28px
    color white

    /* Small devices (tablets, 768px and up) */
    @media screen and (min-width 768px)
      font-size 32px

    /* Medium devices (desktops, 992px and up) */
    @media screen and (min-width 992px)
      font-size 32px 

    /* Large devices (large desktops, 1200px and up) */
    @media screen and (min-width 1200px)
      font-size 40px

  p
    color darken(white, 25%)

  .sub-form
    margin 0

    /* Large devices (large desktops, 1200px and up) */
    @media screen and (min-width 1200px)
      margin 20px 0

  .form-control
    padding 24px 15px
    font-size 20px
    font-family roboto

  .btn
    font-family roboto
    font-size 20px
    padding 11px 20px
    font-weight 700
    letter-spacing 1px

    &.btn-primary
      background-color darken(#a685bd, 5%)
      border 0
      margin-top 3px

      &:hover
        background-color darken(#a685bd, 15%) 
        -webkit-transition background .1s ease-in-out
        transition background .1s ease-in-out

  .subscribe-form
    margin-top 20px

    input
      background-color #1d1f2d
      border none

    .radio
      margin-top 3px
      font-size 14px
      font-family roboto
      color white

      input[type=radio]
        margin-top 12px
        padding-right 10px
        color white
        background transparent
        
      .radio-question
        margin 0
        width 100%
        padding 6px 10px 5px
        -webkit-border-radius 5px
        -moz-border-radius 5px
        border-radius 5px
        display inline-block
        min-height 50px 

